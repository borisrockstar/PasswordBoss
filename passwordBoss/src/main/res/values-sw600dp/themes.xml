<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowTitleStyle">@style/Picker.WindowTitleStyle</item>
        <item name="windowFixedHeightMajor">60%</item>
        <item name="windowFixedHeightMinor">75%</item>
        <item name="windowFixedWidthMajor">50%</item>
        <item name="windowFixedWidthMinor">70%</item>
    </style>

    <style name="Picker.WindowTitleStyle" parent="android:Widget">
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>
</resources>