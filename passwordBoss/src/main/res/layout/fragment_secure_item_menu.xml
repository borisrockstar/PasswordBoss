<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.passwordboss.android.widget.AppItemIconView
            android:id="@+id/fr_simn_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fr_si_icon_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_double"/>

        <TextView
            android:id="@+id/fr_simn_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            tools:text="Title"/>

        <TextView
            android:id="@+id/fr_simn_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="Sub Title"
            tools:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_vertical"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding"
            android:showDividers="beginning|middle|end"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/fr_simn_open_website"
                style="@style/SecureItem.Menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_menu_open_browser"
                android:text="@string/MenuOpenWebsite"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/fr_simn_copy_username"
                style="@style/SecureItem.Menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_menu_copy_username"
                android:text="@string/MenuCopyUsername"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/fr_simn_copy_password"
                style="@style/SecureItem.Menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_menu_copy_password"
                android:text="@string/CopyPassword"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/fr_simn_share_item"
                style="@style/SecureItem.Menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_menu_share_item"
                android:text="@string/ShareItem"/>

            <TextView
                android:id="@+id/fr_simn_edit_item"
                style="@style/SecureItem.Menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_menu_edit_item"
                android:text="@string/MenuEditItem"/>

            <TextView
                android:id="@+id/fr_simn_favorite"
                style="@style/SecureItem.Menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_menu_favorite_unchecked"
                android:text="@string/Favorite"/>

            <TextView
                android:id="@+id/fr_simn_delete"
                style="@style/SecureItem.Menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_menu_delete"
                android:text="@string/Delete"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>

