<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:ignore="RtlHardcoded,UselessParent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ac_logo"
                tools:ignore="ContentDescription" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/fr_unpn_label_enter_pin"
                    fontPath="@string/font_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_half"
                    android:layout_marginTop="@dimen/margin"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding_double"
                    android:paddingRight="@dimen/padding_double"
                    android:text="@string/EnterYourPin"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/fr_unpn_label_error"
                    fontPath="@string/font_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_half"
                    android:layout_marginTop="@dimen/margin"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding_double"
                    android:paddingRight="@dimen/padding_double"
                    android:text="@string/IncorrectPin"
                    android:textColor="#f00"
                    android:textSize="18sp"
                    android:visibility="invisible" />
            </FrameLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/padding_half"
                android:orientation="horizontal">

                <CheckedTextView
                    android:id="@+id/fr_unpn_symbol_01"
                    style="@style/PinActivity.Symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckedTextView
                    android:id="@+id/fr_unpn_symbol_02"
                    style="@style/PinActivity.Symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckedTextView
                    android:id="@+id/fr_unpn_symbol_03"
                    style="@style/PinActivity.Symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckedTextView
                    android:id="@+id/fr_unpn_symbol_04"
                    style="@style/PinActivity.Symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <com.passwordboss.android.widget.AppPinKeyboardView
                android:id="@+id/fr_unpn_keyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>


        <Button
            android:id="@+id/fr_unpn_button_cancel"
            style="@style/AppButton.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:text="@string/CancelLogout" />

        <Button
            android:id="@+id/fr_unpn_button_delete"
            style="@style/AppButton.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:text="@string/Delete" />
    </FrameLayout>


</LinearLayout>