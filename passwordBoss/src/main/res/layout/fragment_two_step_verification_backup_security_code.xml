<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_window_grey"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_double"
        android:paddingLeft="@dimen/padding_double"
        android:paddingRight="@dimen/padding_double">

        <TextView
            style="@style/Text.Semibold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_half"
            android:text="@string/TwoStepBackupSecurityCodeScreenFirstMessage"
            android:textColor="@color/black" />


        <TextView
            style="@style/Text.Semibold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_half"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/TwoStepBackupSecurityCodeScreenSecondMessage" />

        <TextView
            android:id="@+id/fr_tsvbsc_code"
            style="@style/AppEditText.RoundedGreenWhiteBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_half"
            android:gravity="center" />

        <Button
            android:id="@+id/fr_tsvbsc_button_copy"
            style="@style/AppButton.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_fr_tsvaa_copy"
            android:drawablePadding="@dimen/padding_half"
            android:minWidth="0dp"
            android:text="@string/Copy"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <Button
        android:id="@+id/fr_tsvbsc_button_next"
        style="@style/AppButton.Bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/Next" />

</LinearLayout>