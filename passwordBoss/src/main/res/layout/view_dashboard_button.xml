<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_half"
    android:paddingRight="@dimen/padding_half"
    android:paddingTop="@dimen/padding_half">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/vw_db_button"
        android:layout_width="@dimen/vw_db_button_size"
        android:layout_height="@dimen/vw_db_button_size"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_half"
        app:backgroundTint="@color/vw_db_button_background" />

    <TextView
        android:id="@+id/vw_db_text"
        fontPath="@string/font_semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" />

</LinearLayout>